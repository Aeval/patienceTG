extends layout

block content
  .container
    .row.justify-content-center
      h1.text-white Patience: The Game
    .row.justify-content-center
      .card-group
        .card.text-center.gameCards.text-white.bg-dark.border-primary
          .card-header
            h2 Timer
          .card-body
            h4#timer.card-title.mt-4
            button(type="button" class="btn btn-primary mt-2" id="startBtn") Start
            button(type="button" class="btn btn-danger mt-2" id="stopBtn") Hit
        .card.text-center.gameCards.text-white.bg-dark.border-primary
          .card-header
            h2 Score
          .card-body
            h4#score.card-title
            p#highTitle.card-text High Score
            p#highScore.card-text
  include ./components/scriptIncludes/prereqScripts